* {
	padding: 0px;
	margin: 0px;
}

body {
	font-size: 100%;
	font-family: "微軟正黑體", "蘋果儷中黑", Helvetica, Arial, FreeSans, Sans-serif;
}

h2 {
	color: #FFFFFF;
	font-size: 1.1em;
}

.form_required {
	color: red;
	font-size: 0.8em;
	margin-left: 3px;
}

.note {
	color: #595959;
	font-size: 0.8em;
	margin-left: 3px;
}

.error {
	color: red;
	font-size: 0.8em;
	margin-left: 3px;
}

#page_header {
	background-color: #FF6600;
	margin: 0px 0px 15px 0px;
	padding: 8px 10px 8px 10px;
}

#page_content {
	padding: 0px 15px 10px 15px;
}

#video_title {
	width: 250px;
}

#video_description, #video_tags {
	width: 80%;
}

#video_title, #video_description, #video_tags {
	margin-top: 3px;
}

#video_category {
	margin-left: 3px;
}

#drag_drop_file {
	color: #CCC;
	border: 4px dashed #DDD;
	font-size: 1.5em;
	margin-top: 5px; 
	padding: 1em;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
}

#drag_drop_file .drop-instructions {
	display: block;
}

#drag_drop_file .drop-over {
	display: none;
}

#drag_drop_file.over {
	background-color: #FFFF99;
}

#drag_drop_file.over .drop-instructions {
	display: none;
}

#drag_drop_file.over .drop-over {
	display: block;
}

#go {
	background-color: #FFFFFF;
	border: 2.5px solid;
	font-size: 1.05em;
	padding: 2px 10px;
}

#link_code, #embed_code {
	margin-top: 3px;
	width: 100%;
	color: #666;
}